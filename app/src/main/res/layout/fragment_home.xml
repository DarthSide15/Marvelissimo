<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.HomeFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/home_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeDescriptionTxt"
                android:fontFamily="@font/heebo"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/homeDescriptionTxt" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.495">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search for a character" android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
                android:text="Character name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"/>
        <TextView
                android:text="name"
                android:layout_width="49dp"
                android:layout_height="20dp"
                android:id="@+id/name_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <TextView
                android:text="Description:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/name_placeholder" app:layout_constraintHorizontal_bias="0.498"/>
        <TextView
                android:text="description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.053"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.HomeFragment"
             android:id="@+id/frameLayout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/edit_text_c"
                android:imeOptions="actionSend"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:hint="search for characters.."
                app:layout_constraintHorizontal_bias="0.35"/>

        <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button_c"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/colorPrimary"
                android:drawableStart="@android:drawable/ic_search_category_default"
                android:alpha="0.9"
                app:layout_constraintTop_toTopOf="@+id/edit_text_c"
                app:layout_constraintBottom_toBottomOf="@+id/edit_text_c"
                app:layout_constraintStart_toEndOf="@+id/edit_text_c"
                android:layout_marginStart="8dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/edit_text_s"
                android:inputType="text"
                android:hint="search for series.."
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_c"
                app:layout_constraintStart_toStartOf="@+id/edit_text_c"
                app:layout_constraintEnd_toEndOf="@+id/edit_text_c"/>

        <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button_s"
                android:clickable="true"
                android:background="@color/colorPrimary"
                android:drawableStart="@android:drawable/ic_search_category_default"
                android:alpha="0.9"
                app:layout_constraintStart_toEndOf="@+id/edit_text_s"
                app:layout_constraintTop_toTopOf="@+id/edit_text_s"
                app:layout_constraintBottom_toBottomOf="@+id/edit_text_s"
                android:layout_marginStart="8dp"/>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/result_list"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_s"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/series_parent_layout">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/series_image"
            android:src="@mipmap/ic_launcher"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series Title"
            android:id="@+id/series_title"
            android:layout_toRightOf="@id/series_image"
            android:textColor="@color/colorText"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"/>

    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:id="@+id/series_favourite_button"
            android:background="@android:drawable/star_off"/>

</RelativeLayout>
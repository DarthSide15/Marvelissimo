<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main_files.SeriesDetailsActivity"
        android:id="@+id/constraint_layout"
        android:background="@color/colorBackground">

    <TextView
            android:text="End Year:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_year"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/start_year"
            app:layout_constraintStart_toStartOf="@+id/start_year"/>

    <TextView
            android:text="Characters:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/end_year"
            app:layout_constraintStart_toStartOf="@+id/end_year"/>

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/image_ph"
            android:scaleType="fitXY"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="Title placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_ph"
            android:textSize="18sp"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/image_ph"
            app:layout_constraintTop_toTopOf="@+id/image_ph"
            app:layout_constraintStart_toEndOf="@+id/image_ph"
            android:layout_marginStart="24dp"
            android:maxWidth="200dp"/>

    <TextView
            android:text="No description available"
            android:layout_height="wrap_content"
            android:id="@+id/series_description"
            android:layout_width="350dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/image_ph"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="Start Year:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_year"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/series_description"
            app:layout_constraintStart_toStartOf="@+id/series_description"/>

    <TextView
            android:text="Unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_year_ph"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toTopOf="@+id/start_year"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/series_description"/>

    <TextView
            android:text="Unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_year_ph"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@+id/start_year_ph"
            app:layout_constraintEnd_toEndOf="@+id/start_year_ph"
            android:layout_marginTop="24dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/character_list_layout"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/end_year_ph"
            app:layout_constraintEnd_toEndOf="@+id/end_year_ph"
            />

</android.support.constraint.ConstraintLayout>
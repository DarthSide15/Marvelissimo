<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main_files.SeriesDetailsActivity"
        android:id="@+id/constraint_layout"
        android:background="@color/colorBackground">

    <TextView
            android:text="Series:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/character_details_textView"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            app:layout_constraintStart_toStartOf="@+id/character_description"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/character_description"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/series_list_layout"
            app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/image_ph"
            android:scaleType="fitXY"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="Title placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/character_title_ph"
            android:textSize="18sp"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/image_ph"
            app:layout_constraintTop_toTopOf="@+id/image_ph"
            app:layout_constraintStart_toEndOf="@+id/image_ph"
            android:layout_marginStart="24dp"
            android:maxWidth="200dp"/>

    <TextView
            android:text="No description available"
            android:layout_height="wrap_content"
            android:id="@+id/character_description"
            android:layout_width="350dp"
            android:fontFamily="@font/heebo"
            android:textColor="@color/colorText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_ph"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/image_ph"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="269dp"
            android:layout_height="91dp"
            android:id="@+id/series_list_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/character_description"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>